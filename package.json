{
  "name": "ts-node-boilerplate",
  "version": "1.0.0",
  "description": "A basic starting point for a TS+Node project",
  "main": "build/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest --verbose -u",
    "coverage": "jest --coverage",
    "build": "tsc",
    "prettify": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikeharty/ts-node-boilerplate.git"
  },
  "author": "Mike Harty",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/mikeharty/ts-node-boilerplate/issues"
  },
  "homepage": "https://github.com/mikeharty/ts-node-boilerplate#readme",
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.7",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "1.14.3",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "express": "^4.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__test__/.*|\\.(test|spec))\\.ts$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transformIgnorePatterns": []
  }
}
